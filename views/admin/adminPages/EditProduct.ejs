      if (fileInput.files.length > 4) {
        // Prevent the form submission if more than 5 files are selected
        event.preventDefault();

        // Use SweetAlert to display a custom message
        Swal.fire({
          icon: 'error',
          title: 'Oops',
          text: 'Please select a maximum of 4 images.',
        });
      }
    });
  </script>



