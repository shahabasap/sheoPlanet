  <script>
    function confirmDelete(PId, Pname, iterating) {
      var confirmationText = 'Are you sure you want delete the photo  ' + '?';

      Swal.fire({
        title: '<span class="text-black">Delete Photo',
        text: confirmationText,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, delete!',
        customClass: {
          content: 'text-black',
          text: 'text-black'
        }
      }).then((result) => {
        if (result.isConfirmed) {
          // Redirect to the block action
          window.location.href = `/admin/deletePhoto/?pid=${PId}&image=${iterating}`;
        }
      });
    }
  </script>
